---
import '@/styles/global.css'
import '@/styles/misc.css'
import '@/styles/typography.css'

import Footer from '@/components/Footer.astro'
import Head from '@/components/Head.astro'
import Header from '@/components/Header.astro'
import LoadingBar from '@/components/LoadingBar.astro'
import { SITE } from '@/consts'
import { cn } from '@/lib/utils'

interface Props {
  class?: string
}

const { class: className } = Astro.props
---

<!doctype html>
<html
  class="bg-background text-foreground scheme-light-dark"
  lang={SITE.locale}
>
  <Head>
    <slot name="head" />
  </Head>
  <body class="flex h-fit min-h-screen flex-col gap-y-6 font-sans">
    <LoadingBar />
    <header
      id="main-header"
      class="bg-background/50 sticky top-0 z-50 divide-y backdrop-blur-sm transition-transform duration-300 ease-in-out xl:divide-none"
    >
      <Header />
      <slot name="subposts-navigation" />
      <slot name="table-of-contents" />
    </header>
    <main
      class={cn('w-full mx-auto flex grow flex-col gap-y-6 px-4', className)}
    >
      <slot />
    </main>
    <Footer />
  </body>
</html>

<script>
  // todo : need to cleanup!
  function initScrollHeader() {
    const header = document.getElementById('main-header')
    if (!header) return

    const SCROLL_THRESHOLD = 50
    const TOP_THRESHOLD = 10

    let lastScrollY = window.scrollY
    let isHeaderHidden = false
    let scrollPositionAtStateChange = 0
    let ticking = false

    function showHeader() {
      if (!header) return
      header.classList.remove('-translate-y-full')
      isHeaderHidden = false
      scrollPositionAtStateChange = window.scrollY
    }

    function hideHeader() {
      if (!header) return
      header.classList.add('-translate-y-full')
      isHeaderHidden = true
      scrollPositionAtStateChange = window.scrollY
    }

    function updateHeader() {
      const currentScrollY = window.scrollY
      const scrollDelta = Math.abs(currentScrollY - scrollPositionAtStateChange)
      const isScrollingDown = currentScrollY > lastScrollY

      // Always show header at top of page
      if (currentScrollY < TOP_THRESHOLD) {
        if (isHeaderHidden) showHeader()
      }
      // Only update if scrolled enough distance
      else if (scrollDelta >= SCROLL_THRESHOLD) {
        if (isScrollingDown && !isHeaderHidden) {
          hideHeader()
        } else if (!isScrollingDown && isHeaderHidden) {
          showHeader()
        }
      }

      lastScrollY = currentScrollY
      ticking = false
    }

    function onScroll() {
      if (!ticking) {
        window.requestAnimationFrame(updateHeader)
        ticking = true
      }
    }

    window.addEventListener('scroll', onScroll, { passive: true })
  }

  initScrollHeader()
  document.addEventListener('astro:page-load', initScrollHeader)
</script>
