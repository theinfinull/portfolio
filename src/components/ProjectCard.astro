---
import AnimatedButton from '@/components/AnimatedButton.astro'
import { ICON_MAP, SITE, getIconColor, getIconName } from '@/consts'
import { Icon } from 'astro-icon/components'
import { Image } from 'astro:assets'
import type { CollectionEntry } from 'astro:content'

interface Props {
  project: CollectionEntry<'projects'>
}

const { project } = Astro.props
---

<div
  class="flex flex-col overflow-hidden rounded-xl border transition-all duration-300 ease-in-out hover:scale-[1.01] hover:shadow-lg sm:flex-row sm:items-stretch"
>
  <div
    class="border-border w-full overflow-hidden border-b sm:max-w-3xs sm:shrink-0 sm:self-stretch sm:border-r sm:border-b-0"
  >
    {/* prettier-ignore */}
    {/* @ts-expect-error - Astro Image accepts ImageMetadata | string */}
    <Image
      src={project.data.image ?? SITE.defaultProjectBanner}
      alt={project.data.name}
      width={1200}
      height={630}
      class="h-full w-full object-cover"
    />
  </div>
  <div class="flex grow flex-col p-4">
    <div class="flex grow flex-col gap-4">
      <div>
        <h3 class="mb-1 text-xl font-bold">
          {project.data.name}
        </h3>
        <p class="text-muted-foreground mb-2 text-sm">
          {project.data.description}
        </p>
        {
          project.data.tags && (
            <div class="flex flex-wrap gap-2">
              {project.data.tags.map((tag: string) => {
                const iconEntry = ICON_MAP[tag as keyof typeof ICON_MAP]
                const iconName = getIconName(iconEntry)
                const iconColor = getIconColor(iconEntry)
                return (
                  <span class="text-muted-foreground bg-muted/30 flex items-center gap-1.5 rounded-sm px-1.5 py-0.5 text-xs">
                    <Icon
                      name={iconName || 'lucide:code'}
                      class="size-2.5"
                      style={iconColor ? `color: ${iconColor}` : undefined}
                    />
                    {tag}
                  </span>
                )
              })}
            </div>
          )
        }
      </div>
    </div>
    {
      (project.data.sourceCodeLink ||
        project.data.siteLink ||
        project.data.relatedBlogsLink) && (
        <div class="mt-4 flex flex-wrap gap-2 border-t pt-4">
          {project.data.sourceCodeLink && (
            <AnimatedButton
              href={project.data.sourceCodeLink}
              external
              variant="outline"
              size="sm"
              class="w-full flex-1 grow justify-center"
              icon="lucide:code"
              iconPosition="left"
            >
              Source Code
            </AnimatedButton>
          )}
          {project.data.relatedBlogsLink && (
            <AnimatedButton
              href={project.data.relatedBlogsLink}
              variant="outline"
              size="sm"
              class="bg-accent hover:bg-accent/80 hover:text-background text-background dark:hover:bg-accent/80 w-full flex-1 grow justify-center"
              class="w-full flex-1 grow justify-center"
              icon="lucide:book-open"
              iconPosition="left"
            >
              Related Blogs
            </AnimatedButton>
          )}
          {project.data.siteLink && (
            <AnimatedButton
              href={project.data.siteLink}
              external
              variant="default"
              size="sm"
              class="w-full flex-1 grow justify-center"
              icon="lucide:arrow-right"
              iconPosition="right"
            >
              Visit Site
            </AnimatedButton>
          )}
        </div>
      )
    }
  </div>
</div>
